<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">




    <!-- 定义被代理者 -->
    <bean id="human" class="com.sgq.bean.bean.human"></bean>

    <!-- 定义通知内容，也就是切入点执行前后需要做的事情 -->
    <bean id="SleepHelper" class="com.sgq.bean.bean.SleepHelper"></bean>

    <!-- 定义切入点位置 -->
    <bean id="sleepPointcut" class="org.springframework.aop.support.JdkRegexpMethodPointcut">
        <property name="pattern" value=".*hello"/>
    </bean>


    <!--
    切点仅仅是定义了故事发生的地点，还有故事发生的时间和最重要的故事的内容，那就是通知了。

    重要是把通知和切点接和起来。
    -->

    <!-- 使切入点与通知相关联，完成切面配置 -->
    <bean id="sleepHelperAdvisor" class="org.springframework.aop.support.DefaultPointcutAdvisor">
        <!--通知-->
        <property name="advice"   ref="SleepHelper"/>
        <!--切点-->
        <property name="pointcut" ref="sleepPointcut"/>
    </bean>


    <!-- 设置代理 -->
    <bean id="humanProxy" class="org.springframework.aop.framework.ProxyFactoryBean">

        <!-- 代理的对象，有睡觉能力 -->
        <property name="target" ref="human"/>
        <!-- 使用切面 -->
        <property name="interceptorNames" value="sleepHelperAdvisor"/>
        <!-- 代理接口，睡觉接口 -->
        <property name="proxyInterfaces" value="com.sgq.bean.bean.Sleepable"/>
    </bean>

</beans>